{
  "manifest_version": 3,
  "name": "Web Shortcuts",
  "version": "1.0",
  "description": "Automate your web tasks with a powerful shortcut editor",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "tabs",
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "downloads",
    "geolocation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "dashboard/dashboard.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["editor/editor.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
