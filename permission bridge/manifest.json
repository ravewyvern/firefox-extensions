{
  "manifest_version": 3,
  "name": "Web Bridge",
  "version": "1.0.0",
  "description": "Allows websites to securely request advanced browser permissions.",
  "icons": {
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardRead",
    "clipboardWrite",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": ["background/background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dashboard/dashboard.html",
        "dashboard/dashboard.css",
        "dashboard/dashboard.js",
        "prompt/prompt.html",
        "prompt/prompt.css",
        "prompt/prompt.js",
        "api/bridge-api.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}