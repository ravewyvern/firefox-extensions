{
  "manifest_version": 3,
  "name": "Material You Calculator",
  "version": "1.0.1",
  "description": "A stylish Material You themed calculator that opens in a standalone window.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Material Calculator"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "material-calculator@example.com"
    }
  }
}
